<%= form_with(model: guide, local: true) do |form| %>
  <% if guide.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(guide.errors.count, "error") %> prohibited this guide from being saved:</h2>

      <ul>
        <% guide.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid-2">
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'text-field' %>
    </div>

    <div class="form-group">
      <label>Featured image</label>
      <%= form.file_field :featured_image, class: "input" %>
    </div>
  </div>

  <div class="grid-2">
    <div class="form-group">
      <%= form.label :topic_id %>
      <%= form.text_field :topic_id, class: 'text-field' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.rich_text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit 'Save', class: 'btn-primary' %>
  </div>
<% end %>
