<div class="list-container__item">
  <div class="list-container__item__thumb">
    <%= link_to guide do %>
      <% if guide.featured_image.attached? %>
        <%= image_tag(guide.featured_image) %>
      <% else %>
        <%= image_tag('placeholders/empty-thumb.png') %>
      <% end %>
    <% end %>
  </div>

  <div class="list-container__item__content">
    <div class="guide-title">
      <%= link_to guide do %>
        <%= guide.title.truncate(60) %>
      <% end %>
    </div>
  </div>

  <div class="list-container__item__ratings">
    Ratings
  </div>
</div>
