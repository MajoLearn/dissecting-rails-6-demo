<div class="nav-wrapper">
  <div class="nav-wrapper__left">
    <div class="nav-wrapper__left__logo">
      <%= link_to root_path do %>
        <%= image_tag("logo.png") %>
      <% end %>
    </div>

    <div class="nav-wrapper__left__link">
      <%= link_to root_path do %>
        <%= inline_svg('my-feed.svg', class: 'nav-icon') %>
        <span>My Feed</span>
      <% end %>
    </div>

    <div class="nav-wrapper__left__link">
      <%= link_to root_path do %>
        <%= inline_svg('catagories.svg', class: 'nav-icon') %>
        <span>Topics</span>
      <% end %>
    </div>

    <div class="nav-wrapper__left__link">
      <%= link_to root_path do %>
        <%= inline_svg('users.svg', class: 'nav-icon') %>
        <span>Users</span>
      <% end %>
    </div>

    <div class="nav-wrapper__left__link">
      <%= link_to root_path do %>
        <%= inline_svg('posts.svg', class: 'nav-icon') %>
        <span>Posts</span>
      <% end %>
    </div>
  </div>

  <div class="nav-wrapper__search">
    <%= form_with url: search_query_path, method: :get, local: true do |f| %>
      <span class="search-wrapper">
        <span id="search-icon-id" class="fa fa-search"></span>
        <%= f.text_field :q, id: :q, class: 'search-box', placeholder: 'What do you want to learn today?' %>
      </span>
    <% end %>
  </div>

  <div class="nav-wrapper__right">
    <% if current_user %>
      <%= link_to new_guide_path, class: "btn-primary" do %>
        New Post
      <% end %>

      <div class="nav-wrapper__right__avatar">
        <%= gravatar_image_tag(current_user.email, alt: current_user.username) %>
      </div>

      <%= link_to root_path do %>
        <%= inline_svg('settings-icon.svg', class: 'nav-icon', style: 'height: 15px;') %>
      <% end %>
    <% else %>
    <% end %>
  </div>
</div>
